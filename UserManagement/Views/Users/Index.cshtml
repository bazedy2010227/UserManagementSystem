@model List<UsersViewModel> 
@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>
<a asp-action="Add" class="btn btn-primary">Add User</a>
<table class="table table-striped mt4">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Manage Roles</th>
         </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ",user.Roles.ToList())</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Users" asp-action="ManageRoles" asp-route-userId="@user.Id">Manage Roles</a>
                    <a class="btn btn-outline-primary" asp-controller="Users" asp-action="EditProfile" asp-route-userId="@user.Id">Edit Profile</a>

                </td>
            </tr>
        }

    </tbody>
</table>